{
  "name": "school",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/postgres": "^1.9.1",
    "@sap/cds": "^7",
    "@sap/cds-dk": "^7.9.2",
    "@sap/xssec": "^3",
    "express": "^4",
    "multer": "^1.4.5-lts.1",
    "passport": "^0",
    "ui5-cc-excelupload": "^0.20.0",
    "uuid": "^10.0.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/ux-specification": "^1.120.14"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-school": "cds watch --open school/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-project1": "cds watch --open project1/webapp/index.html?sap-ui-xx-viewCache=false",
    "watch-objectpage": "cds watch --open objectpage/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "db": {
        "impl": "@cap-js/postgres",
        "pool": {
          "max": 20
        }
      },
      "auth": {
        "auth": {
          "strategy": "mock"
        },
        "[production]": {
          "strategy": "JWT"
        }
      },
      "API_PRODUCT_SRV": {
        "kind": "odata-v2",
        "model": "srv/external/API_PRODUCT_SRV",
        "csrf": true,
        "csrfInBatch": true,
        "[production]": {
          "credentials": {
            "destination": "S4HANA",
            "path": "/sap/opu/odata/sap/API_PRODUCT_SRV"
          }
        }
      }
    }
  },
  "sapux": [
    "app/school",
    "app/project1",
    "app/project1",
    "app/objectpage"
  ]
}
